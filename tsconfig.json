{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@api/*": ["api/*"],
      "@assets/*": ["assets/*"],
      "@i18n": ["i18n"],
      "@providers": ["providers"],
      "@routes": ["routes"],
      "@features/*": ["features/*"],
      "@layout": ["layout"],
      "@shared/*": ["shared/*"]
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    ".eslintrc.cjs",
    "vite.config.ts",
    "vitest.config.ts",
    "vitest.workspace.ts",
    "src"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
